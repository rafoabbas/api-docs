{
    "name": "rafoabbas/api-docs",
    "description": "Generate API documentation (Postman collections & OpenAPI specs) from PHP attributes and YAML files",
    "keywords": [
        "laravel",
        "api",
        "documentation",
        "postman",
        "openapi",
        "swagger",
        "attributes",
        "rest"
    ],
    "type": "library",
    "license": "MIT",
    "homepage": "https://github.com/rafoabbas/api-docs",
    "authors": [
        {
            "name": "Rauf Abbaszade",
            "email": "rafo.abbas@gmail.com"
        }
    ],
    "support": {
        "issues": "https://github.com/rafoabbas/api-docs/issues",
        "source": "https://github.com/rafoabbas/api-docs"
    },
    "require": {
        "php": "^8.2",
        "illuminate/support": "^11.0|^12.0",
        "illuminate/console": "^11.0|^12.0",
        "illuminate/routing": "^11.0|^12.0",
        "symfony/yaml": "^7.0"
    },
    "require-dev": {
        "laravel/pint": "^1.27",
        "orchestra/testbench": "^9.0|^10.0",
        "pestphp/pest": "^3.0|^4.0",
        "pestphp/pest-plugin-laravel": "^3.0|^4.0",
        "rector/rector": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "ApiDocs\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ApiDocs\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "ApiDocs\\ApiDocsServiceProvider"
            ]
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test:coverage": "vendor/bin/pest --coverage",
        "lint": "vendor/bin/pint",
        "lint:test": "vendor/bin/pint --test",
        "rector": "vendor/bin/rector",
        "rector:dry": "vendor/bin/rector --dry-run",
        "fix": "vendor/bin/rector && vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
